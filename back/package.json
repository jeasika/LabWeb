    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "migrate-mongo": "^9.0.0",
    "mongoose": "^6.3.1",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "node": "^16.13.2",
    "passport": "^0.5.2",
    "passport-google-oidc": "^0.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.18.2",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "shx": "^0.3.4"
  },
  "scripts": {
    "start": "nodemon --exec npx babel-node src/index.js",
    "build": "yarn clean && yarn build:server && yarn build:client && yarn mergefront",
    "build:server": "cross-env BABEL_ENV=production babel src --out-dir dist",
    "build:client": "cd ../front/ && yarn build",
    "mergefront": "yarn shx mv ../front/build dist/static",
    "format": "prettier --write",
    "clean": "yarn shx rm -rf ../front/build dist",
    "lint": "eslint ."
  },
  "lint-staged": {
    "*.js": "prettier --write"
  }
}
